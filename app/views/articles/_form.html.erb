<%= render 'shared/error', obj: @article %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @article do |f| %>
    
      <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter Article Title", autofocus: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", rows: 20, placeholder: "Enter Article" %>
      </div>
      
      <div class="form-group">
        <%= f.submit class: "btn btn-primary btn-block" %>
      </div>
      
    <% end %>
  </div>
</div>